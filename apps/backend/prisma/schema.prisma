generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== USER =====
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  avatarUrl     String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  listings      Listing[]
  forumPosts    ForumPost[]
  forumReplies  ForumReply[]   // ← added reverse relation
  blogPosts     BlogPost[]
  blogComments  BlogComment[]  // ← added reverse relation
  business      Business?      // ← 1:1 relation (no fields/references here)

  @@map("users")
}

enum Role {
  USER
  MODERATOR
  ADMIN
  BUSINESS
}

// ===== CLASSIFIEDS =====
model Listing {
  id             String       @id @default(cuid())
  title          String
  description    String
  type           ListingType
  price          Float?
  currency       String       @default("USD")
  location       String
  lat            Float?
  lng            Float?
  images         String[]
  isPromoted     Boolean      @default(false)
  promotedUntil  DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  userId         String
  user           User         @relation(fields: [userId], references: [id])

  metadata       Json?

  goods          GoodsListing?
  job            JobListing?
  auto           AutoListing?
  realEstate     RealEstateListing?
  promotions     Promotion[]   // ← added reverse relation

  @@map("listings")
}

enum ListingType {
  GOODS
  JOBS
  AUTOS
  REAL_ESTATE
}

model GoodsListing {
  id          String   @id @default(cuid())
  condition   String?
  category    String?

  listingId   String   @unique
  listing     Listing  @relation(fields: [listingId], references: [id])

  @@map("goods_listings")
}

model JobListing {
  id            String   @id @default(cuid())
  jobType       String?
  salaryMin     Float?
  salaryMax     Float?
  company       String?
  experience    String?

  listingId     String   @unique
  listing       Listing  @relation(fields: [listingId], references: [id])

  @@map("job_listings")
}

model AutoListing {
  id            String   @id @default(cuid())
  make          String
  model         String
  year          Int
  mileage       Int?
  fuelType      String?
  transmission  String?

  listingId     String   @unique
  listing       Listing  @relation(fields: [listingId], references: [id])

  @@map("auto_listings")
}

model RealEstateListing {
  id            String   @id @default(cuid())
  propertyType  String
  bedrooms      Int?
  bathrooms     Int?
  areaSqm       Int?
  isForSale     Boolean  @default(true)

  listingId     String   @unique
  listing       Listing  @relation(fields: [listingId], references: [id])

  @@map("real_estate_listings")
}

// ===== FORUM =====
model ForumCategory {
  id        String      @id @default(cuid())
  name      String      @unique
  slug      String      @unique
  order     Int         @default(0)
  posts     ForumPost[]

  @@map("forum_categories")
}

model ForumPost {
  id          String    @id @default(cuid())
  title       String
  content     String
  views       Int       @default(0)
  isPinned    Boolean   @default(false)
  isLocked    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId      String
  user        User      @relation(fields: [userId], references: [id])

  categoryId  String
  category    ForumCategory @relation(fields: [categoryId], references: [id])

  replies     ForumReply[]

  @@map("forum_posts")
}

model ForumReply {
  id        String    @id @default(cuid())
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  userId    String
  user      User      @relation(fields: [userId], references: [id])
  postId    String
  post      ForumPost @relation(fields: [postId], references: [id])

  @@map("forum_replies")
}

// ===== BLOG =====
model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId      String
  user        User      @relation(fields: [userId], references: [id])

  comments    BlogComment[]

  @@map("blog_posts")
}

model BlogComment {
  id        String    @id @default(cuid())
  content   String
  createdAt DateTime  @default(now())

  userId    String
  user      User      @relation(fields: [userId], references: [id])
  postId    String
  post      BlogPost  @relation(fields: [postId], references: [id])

  @@map("blog_comments")
}

// ===== BUSINESS DIRECTORY =====
model Business {
  id          String    @id @default(cuid())
  name        String
  description String?
  logoUrl     String?
  website     String?
  phone       String?
  email       String?
  address     String
  lat         Float
  lng         Float
  verified    Boolean   @default(false)
  category    String?

  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id])  // ← only this side defines fields/references

  @@map("businesses")
}

// ===== PROMOTIONS =====
model Promotion {
  id         String   @id @default(cuid())
  listingId  String
  listing    Listing  @relation(fields: [listingId], references: [id])
  amount     Float
  currency   String   @default("USD")
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@map("promotions")
}